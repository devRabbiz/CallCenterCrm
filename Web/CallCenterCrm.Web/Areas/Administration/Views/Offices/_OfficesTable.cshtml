@model CallCenterCrm.Web.Areas.Administration.Models.Office.IndexViewModel

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Offices.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offices.First().ManagerUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offices.First().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offices.First().PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offices.First().Email)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model.Offices)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OfficeId }, new { @class = "btn btn-sm btn-success" })
                <button class="btn btn-sm btn-danger btnDelete" data-toggle="modal" data-target="#modalConfirmDelete"
                        data-id="@item.OfficeId" data-backdrop="false">
                    Delete
                </button>
            </td>
        </tr>
    }
</table>

<nav>
    <ul class="pagination">
        <li>
            <a href="#" class="btnPaging" data-page="@(Model.ActivePage > 0 ? Model.ActivePage - 1 : 0)">&laquo;</a>
        </li>
        
        @for (int i = 0; i < Model.PageCount; i++)
        {
            <li class="@(i == Model.ActivePage ? "active" : "")">
                <a href="#" class="btnPaging" data-page="@i">@i</a>
            </li>
        }

        <li>
            <a href="#" class="btnPaging" data-page="@(Model.ActivePage < Model.PageCount - 1 ? Model.ActivePage + 1 : Model.PageCount - 1)">&raquo;</a>
        </li>
    </ul>
</nav>
